<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cross-Browser Suite" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="com.demo.seleniump.firstproject.utils.MyListenerClass"/>
    </listeners>

    <!-- Test for Chrome Browser -->
    <test name="Chrome Test" parallel="methods" thread-count="2">
        <parameter name="browser" value="chrome"/>
        <classes>
             <class name="com.demo.seleniump.firstproject.login.verifyLoginWithExcel"/>
            <class name="com.demo.seleniump.firstproject.login.verifyLogin"/>
        </classes>
    </test>

    <!-- Test for Firefox Browser -->
    <test name="Firefox Test" parallel="methods" thread-count="2">
        <parameter name="browser" value="firefox"/>
        <classes>
          <class name="com.demo.seleniump.firstproject.login.verifyLoginWithExcel"/>
            <class name="com.demo.seleniump.firstproject.login.verifyLogin"/>
        </classes>
    </test>
    </suite>